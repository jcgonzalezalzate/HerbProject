@using Vueling.Configuration
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @*jQuery*@
    <script src="@Url.Content("~/Scripts/jqueryBase/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Global.js")" type="text/javascript"></script>
    @*jquetyValidate*@
    <script src="@Url.Content("~/Scripts/jqueryValidate/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqueryValidate/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @*jqueryUI*@
    <link href="@Url.Content("~/Content/themes/vueling/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jqueryUI/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqueryUI/jquery.ui.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqueryUI/jquery.ui.unobtrusive.datepicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqueryUI/jquery.ui.unobtrusive.draggable.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqueryUI/jquery.ui.unobtrusive.accordion.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqueryUI/jquery.ui.unobtrusive.autocomplete.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqueryUI/jquery.ui.unobtrusive.requireconfirmation.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqueryUI/jquery.ui.requireconfirmation.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqueryUI/jquery.ui.unobtrusive.slider.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqueryUI/jquery.ui.unobtrusive.tabs.js")" type="text/javascript"></script>
    @*jquery Grid*@
    <link href="@Url.Content("~/Content/themes/vueling/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jqGrid/i18n/grid.locale-es.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.base.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.jqueryui.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.grouping.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.common.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.formedit.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.inlinedit.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.celledit.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.subgrid.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.treegrid.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.postext.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.tbltogrid.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.setcolumns.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.import.js")" type="text/javascript"></script>

    @if (IsSectionDefined("Head"))
    {
        @RenderSection("Head")
    }
    

    <style type="text/css">
        div#title .tr
        {
            background: url(@Url.Content("~/Content/themes/vueling/images/esquinaTR.gif")) 100% 0 no-repeat;
            margin: 0;
            padding: 0;
        }
        div#title .bl
        {
            background: url(@Url.Content("~/Content/themes/vueling/images/esquinaBL.gif")) 0 100% no-repeat #FDCC12;
            width: 100%;
            margin: 0;
            padding: 0;
        }
        div#title .clear
        {
            font-size: 1px;
            height: 0px;
            margin: 0;
            padding: 0;
        }
    </style>
</head>

<body>
     <div id="page">
        <div id="header">
            <div id="title">
                <div class="bl">
                    <div class="tl">
                        <div class="br">
                            <div class="tr">
                                <img id="Img1" style="float: left;" src="@Url.Content("~/Content/themes/vueling/images/logoHome.gif")"
                                    alt="Logo Vueling" />
                                <div id="logindisplay" style="float: right; margin-right: 20px; margin-top: 35px;">
                                    @if (Request.IsAuthenticated)
                                    {
                                        <text>Welcome <b>@Context.User.Identity.Name</b>!
                                        [<a href="@Vueling.Configuration.Library.VuelingEnvironment.Current.GetSSOConfiguration().IdentityProviderLogoutUrl" >Log out</a>]</text>
                                    }
                                </div>
                                <h1>
                                    HERBProject.WebUI
                                </h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="menucontainer">
                <ul id="menu">
                @*@if (Vueling.CarnetJove.WebUI.Helpers.SecurityHelper.IsAuthorizedUser(typeof(Vueling.CarnetJove.WebUI.Controllers.CarnetJove.Index), "Execute"))
                {
                    <li>@Html.ActionLink("¿Puede comprar hoy?", "CanBuyToday", "CarnetJove")</li>
                }
                @if (Vueling.CarnetJove.WebUI.Helpers.SecurityHelper.IsAuthorizedUser(typeof(Vueling.CarnetJove.WebUI.Controllers.CarnetJove.Index), "Execute"))
                {
                    <li>@Html.ActionLink("Consultar", "Index", "CarnetJove")</li>
                }
                @if (Vueling.CarnetJove.WebUI.Helpers.SecurityHelper.IsAuthorizedUser(typeof(Vueling.CarnetJove.WebUI.Controllers.CarnetJove.FileImporter), "Execute"))
                {                
                    <li>@Html.ActionLink("Importar Fichero", "FileImporter", "CarnetJove")</li>
                }
                @if (Vueling.CarnetJove.WebUI.Helpers.SecurityHelper.IsAuthorizedUser(typeof(Vueling.CarnetJove.WebUI.Controllers.CarnetJove.DataMigration), "Execute"))
                {
                    <li>@Html.ActionLink("Importar datos de MySql", "DataMigration", "CarnetJove")</li> 
                }   *@            
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>
</body>
</html>